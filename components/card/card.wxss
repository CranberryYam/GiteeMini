.y-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.x-box {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* justify-content: space-between; */
}

.card {
  border-style: solid;
  border-width: 1px;
  border-color: #E5E5E5;
  border-radius: 5px;
  padding-top: 12px;
  padding-right: 16px;
  padding-bottom: 10px;
  padding-left: 16px;
}

.card-repo-avator {
  width: 20px;
  height: 20px;
  background-color: #FFCB45;
  border-radius: 10px;
}
.card-repo-name {
  font-size: 12px;
  color: #727272;
  text-align: left;
  /* width: 100%; */
  flex: 1;
  margin-left: 8px;
}

.card-title {
  font-size: 16px;
  font-weight: bold;
  color: #232323;
  text-align: left;
  width: 100%;
  margin-top: 15px;
  margin-bottom: 16px;
}

.card-foot {
  width: 100%;
}
.card-state-icon {
  width: 14px;
  height: 12px;
}
.card-state {
  font-size: 12px;
  color: #9F9F9F;
  margin-left: 2px;
}

.card-time {
  font-size: 12px;
  color: #9F9F9F;
  margin-left: 14px;
}

.card-comments-icon {
  width: 11px;
  height: 10px;
  margin-left: 14px;
}
.card-comments {
  font-size: 12px;
  color: #9F9F9F;
  margin-left: 3px;
}

.card-labels {
  display: flex;
  flex-direction: row-reverse;
  flex: 1;
  /* max-width: 120px; */
  overflow: scroll;
  margin-left: 14px;
}

.card-label {
  font-size: 12px;
  color: #9F9F9F;
  margin-left: 10px;
}


