.page {
    height: 100%;
    display: flex;
    flex-direction: column;
}

.header  {
    width: 100%;
    height: 247px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.header-image {
    width: 100%;
    height: 247px;
    position: fixed;
    z-index: -1;
}

.header-container {
    z-index: 1;
    display: flex;
    flex-direction: column;
}

.header-avator {
    width: 98px;
    height: 98px;
    border-radius: 100px;
    z-index: 1;
}

.header-name {
    font-size: 16px;
    color: black;
    text-align: center;
}

.header-username {
    font-size: 14px;
    color: white;
    text-align: center;
}

.cell-setting {
    width: 100%;
    height: 60px;
    display: flex;
    flex-direction: row;
    align-items: center;
    border-style: solid;
    margin-bottom: 2px;
    border-bottom: 1px;
    border: 1px;
    border-color: #0b0b0e;
}

.cell-setting-icon {
    width: 30px;
    height: 30px;
    border-radius: 30px;
    margin-left: 26px;
}

.cell-setting-title {
    font-size: 18px;
    color: black;
}

.cell-log {
    width: 100%;
    height: 53px;
    color: black;
    border-style: solid;
    margin-bottom: 2px;
    border-bottom: 1px;
    border: 1px;
    border-color: #0b0b0e;
}