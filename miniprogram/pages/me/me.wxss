.page {
    height: 100%;
    display: flex;
    flex-direction: column;
}

.header  {
    width: 100%;
}

.header-image {
    width: 100%;
    position: fixed;
    z-index: -1;
}

.header-container {
    z-index: 1;
}

.header-avator {
    width: 98px;
    height: 98px;
    border-radius: 100px;
    z-index: 1;
}

.header-name {
    font-size: 16px;
    color: black;
}

.header-username {
    font-size: 14px;
    color: white;
}